    "@eslint/object-schema": "^2.1.6",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.5.2"
  },
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || >=21.1.0"
  }
}
